@model HW2.Models.ActorDTO

@{
    ViewData["Title"] = "Create or Update Actor";
}
<link rel="stylesheet" href="~/css/styles.css" />
<h2>Create or Update Actor</h2>

@if(ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JustWatchPersonId" class="control-label"></label>
        <input asp-for="JustWatchPersonId" class="form-control" />
        <span asp-validation-for="JustWatchPersonId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
